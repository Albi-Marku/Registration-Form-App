@model RegistrationFormApp.Models.RegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Register</title>

    <style>
        :root {
            --bg: #f4f6fb;
            --card: #ffffff;
            --primary: #4451c4;
            --muted: #6b7280;
            --error: #d93025;
        }

        * { box-sizing: border-box; }

        body {
            margin: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial;
            background: linear-gradient(180deg, #eef2ff 0%, #f4fafc 100%);
            display:flex;
            align-items:center;
            justify-content:center;
            min-height:100vh;
            color: #111827;
        }

        .card {
            width: 420px;
            max-width: 94%;
            background: var(--card);
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 14px 30px rgba(16,24,40,0.08);
        }

        h1 {
            margin: 0 0 18px 0;
            font-size: 20px;
            color: var(--primary);
            font-weight: 600;
            text-align:center;
        }

        .note {
            text-align:center;
            color:var(--muted);
            font-size:13px;
            margin-bottom:18px;
        }

        .field {
            margin-bottom:14px;
        }

        label {
            display:block;
            font-size:13px;
            color:var(--muted);
            margin-bottom:6px;
        }

        input[type="text"], input[type="tel"] {
            width:100%;
            padding:10px 12px;
            border-radius:8px;
            border:1px solid #e6e9ef;
            background: #fbfdff;
            font-size:15px;
            transition: box-shadow .12s, border-color .12s;
        }

        input:focus {
            outline:none;
            border-color: var(--primary);
            box-shadow: 0 6px 18px rgba(68,81,196,0.08);
            background: #fff;
        }

        .error {
            color: var(--error);
            font-size:12px;
            margin-top:6px;
            display:block;
        }

        button[type="submit"] {
            width:100%;
            padding:11px;
            border-radius:8px;
            border:0;
            background: var(--primary);
            color:#fff;
            font-weight:600;
            cursor:pointer;
            margin-top:6px;
        }

        button[type="submit"]:active {
            transform:translateY(1px);
        }

        .success {
            background: #ecfdf5;
            color: #065f46;
            border-radius:8px;
            padding:10px;
            font-size:14px;
            margin-bottom:12px;
            text-align:center;
        }

        footer {
            text-align:center;
            margin-top:14px;
            color:var(--muted);
            font-size:13px;
        }

        /* ðŸ‘‡ Notice the double @@ */
        @@media (max-width:420px){
            .card { padding:20px; }
        }
    </style>
</head>
<body>
    <div class="card">
        <h1>Create Account</h1>
        <p class="note">Two quick fields â€” fast signup.</p>

        @if (TempData["Success"] != null)
        {
            <div class="success">@TempData["Success"]</div>
        }

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div class="field">
                <label asp-for="Name">Full name</label>
                <input asp-for="Name" type="text" placeholder="Jane Doe" />
                <span asp-validation-for="Name" class="error"></span>
            </div>

            <div class="field">
                <label asp-for="PhoneNumber">Phone number</label>
                <input asp-for="PhoneNumber" type="tel" placeholder="+355 4xx xxx xxx" />
                <span asp-validation-for="PhoneNumber" class="error"></span>
            </div>

            <button type="submit">Submit</button>
        </form>

        <footer>
            Need help? <a href="/contact">Contact support</a>
        </footer>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
