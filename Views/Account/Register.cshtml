@model RegistrationFormApp.Models.RegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Register | MyWebsite</title>

<style>
:root {
    --primary: #1877f2;
    --primary-dark: #145dbf;
    --background: #f0f2f5;
    --card-bg: #fff;
    --text-dark: #1c1e21;
    --text-muted: #65676b;
    --error: #d93025;
}

* { box-sizing: border-box; }

body {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
    background: var(--background);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
}

.logo {
    text-align: center;
    margin-bottom: 25px;
    font-size: 32px;
    font-weight: 700;
    color: var(--primary);
    animation: float 3s ease-in-out infinite;
}

@@keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-4px); }
}

.card {
    width: 400px;
    max-width: 95%;
    background: var(--card-bg);
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 10px 24px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.card:hover {
    transform: translateY(-2px);
    box-shadow: 0 14px 30px rgba(0,0,0,0.12);
}

h2 {
    text-align: center;
    color: var(--text-dark);
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 20px;
}

.field { margin-bottom: 18px; }

label {
    display: block;
    color: var(--text-muted);
    font-size: 14px;
    margin-bottom: 6px;
}

input[type="text"], input[type="tel"] {
    width: 100%;
    padding: 12px 14px;
    border-radius: 8px;
    border: 1px solid #dddfe2;
    font-size: 15px;
    transition: border-color 0.2s ease, background-color 0.2s ease;
}

input:focus {
    outline: none;
    border-color: var(--primary);
    background-color: #f5f9ff;
}

button {
    width: 100%;
    padding: 12px;
    border-radius: 8px;
    border: none;
    background-color: var(--primary);
    color: #fff;
    font-weight: 600;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.2s ease, transform 0.1s ease;
}

button:hover { background-color: var(--primary-dark); }
button:active { transform: scale(0.98); }

.success {
    background-color: #e7f9ee;
    border: 1px solid #10b981;
    color: #065f46;
    border-radius: 8px;
    padding: 10px;
    font-size: 14px;
    margin-bottom: 18px;
    text-align: center;
}

.error {
    color: var(--error);
    font-size: 12px;
    margin-top: 4px;
    display: block;
}

footer {
    text-align: center;
    margin-top: 18px;
    color: var(--text-muted);
    font-size: 13px;
}

footer a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
}

footer a:hover { text-decoration: underline; }

@@media (max-width: 450px) {
    .card { padding: 24px; }
    h2 { font-size: 18px; }
    .logo { font-size: 28px; }
}
</style>
</head>

<body>
    <div class="logo">
        ðŸ‘‹ Welcome Everyone!
    </div>

    <div class="card">
        <h2>Create Your Account</h2>

        @if (TempData["Success"] != null)
        {
            <div class="success">@TempData["Success"]</div>
        }

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div class="field">
                <label asp-for="Name">Full Name</label>
                <input asp-for="Name" type="text" placeholder="Jane Doe" />
                <span asp-validation-for="Name" class="error"></span>
            </div>

            <div class="field">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" type="tel" placeholder="+355 4xx xxx xxx" />
                <span asp-validation-for="PhoneNumber" class="error"></span>
            </div>

            <button type="submit">Sign Up</button>
        </form>

        <footer>
            Already have an account? <a href="#">Log in</a>
        </footer>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
